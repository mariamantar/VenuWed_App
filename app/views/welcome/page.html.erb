<!-- search box on the home page -->
<div class="row">
  <div class="col-md-7-banner">
    <h1><span id="home-title" class="text-red">VenuWed</span></h1>
    <br>
    <h4><span id="home-caption">  Book Venues faster and save time</span></h4>
    <br>
  </div>
</div>
<br>
<%= form_tag search_path, method: :get do %>
<div class="row">
  <div class="col-md-6">
    <%= text_field_tag :search, params[:search], placeholder: "Where are you located?", id:"home-search", class: "form-control" %>
  </div>

<br>
<br>
<br>

<!-- Submit button for the search box -->
<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
  </div>
</div>
<% end %>
<br>
<br>
<br>
<br>
<br><hr><br>

<!-- Venues at the bottom of the page  -->
<div class="row">
    <% @venue_listings.each do |venue_listing| %>
      <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
        <%=  image_tag(venue_listing.image_url, :size => "300x300") %>
      </div>
      <div class="panel-body">
         <%= venue_listing.venue_name %>
         </div>
        </div>
       </div>
       <% end %>

    </div>
