<%= form_for root_path, method: :get do %>
<div class="row">
  <div class="col-md-6">
    <%= text_field_tag :search, params[:search], placeholder: "where are you going?", class: "form-control" %>
  </div>
  <div class="col-md-6">
    <%= text_field_tag :start_date, params[:start_date], placeholder: "start date", class: "form-control datepicker" %>
  </div>
  <div class="col-md-6">
<%= text_field_tag :end_date, params[:end_date], placeholder: "end date", class: "form-control datepicker" %>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
  </div>
</div>
<% end %>

<br><hr><br>



<div class="row">
    <% @venue_listings.each do |venue_listing| %>
      <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
        <%=  image_tag(venue_listing.image_url, :size => "300x300") %>
      </div>
      <div class="panel-body">
         <%= venue_listing.venue_name %>
         </div>
        </div>
       </div>
       <% end %>
    </div>

    <script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});
		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})
</script>
