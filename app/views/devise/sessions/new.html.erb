
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-centre">Log in</h2>
 <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.input :email, required: false, autofocus: true, placeholder: "Email", class: "form-control"%>
        <%= f.input :password, required: false, placeholder: "Password", class: "form-control"%>
      </div>

      <div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

<span class="pull-right">
<%= link_to "Forgot Password", new_user_password_path %>
</span>


      <div class="form-group">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
