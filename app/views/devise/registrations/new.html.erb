<div class="row">
  <div class="col-md-4 col-md-offset-4">
<h2 class="text-centre">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render 'shared/devisemes' %>

  <div class="form-group">
    <%= f.text_field :fullname, required: true, autofocus: true, placeholder: "Full Name", class: "form-control" %>
</div>

  <div class="form-group">
    <%= f.input :email, required: true, autofocus: true, placeholder: "Email", class: "form-control" %>
</div>

    <div>
    <%= f.input :password, required: true, placeholder: "Password", class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>

  </div>

  <div class="form-group">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
</div>
