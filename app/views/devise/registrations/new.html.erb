<div class="row">
  <div class="col-md-4 col-md-offset-4">
<h2 class="text-centre">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<!-- <%= render 'shared/devisemes' %> -->
<%= f.error_notification %>



<div class="form-group">
  <%= f.check_box :is_company, {}, true %>
  <%= f.label :is_company, "Are You a Company" %>
 </div>

  <div class="form-group">
    <%= f.input :email, required: true, autofocus: true, placeholder: "Email", class: "form-control" %>
</div>

    <div>
    <%= f.input :password, required: true, placeholder: "Password", class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: false, placeholder: "Confirm New Password", class: "form-control" %>

  </div>

  <div class="form-group">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
</div>
